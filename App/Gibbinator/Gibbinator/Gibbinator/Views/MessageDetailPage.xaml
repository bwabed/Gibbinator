<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gibbinator.Views.MessageDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Titel:" FontSize="Medium" />
        <Label Text="{Binding Message.MessageTitle}" FontSize="Small"/>
        <Label Text="Beschreibung:" FontSize="Medium" />
        <Label Text="{Binding Message.MessageDescription}" FontSize="Small" />
    </StackLayout>
</ContentPage>