<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gibbinator.Views.TeacherDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Teacher.FullName}" FontSize="Small"/>
        <Label Text="Email:" FontSize="Medium" />
        <Label Text="{Binding Teacher.Email}" FontSize="Small">
        <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding WriteEmail}" CommandParameter="{Binding Teacher.Email}"/>
        </Label.GestureRecognizers>
        </Label>
        <Label Text="Telefon:" FontSize="Medium" />
        <Label Text="{Binding Teacher.Telephone}" FontSize="Small">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CallTelephone}" CommandParameter="{Binding Teacher.Telephone}"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>